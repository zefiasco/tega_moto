<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="sharePrice"
        android:text="@string/button_share" />

    <EditText
        android:id="@+id/enterPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/displayPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/txt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ccFF0000"
        android:contentDescription="@string/desc" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayPrice"
        android:layout_alignLeft="@+id/message"
        android:layout_alignRight="@+id/message"
        android:contentDescription="@string/desc"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterPrice"
        android:layout_alignLeft="@+id/enterPrice"
        android:layout_alignRight="@+id/enterPrice"
        android:gravity="center"
        android:text="@string/message"
        android:textSize="14sp" />
    
</RelativeLayout>
